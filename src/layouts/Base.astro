---
const { title = 'deadmeme.dev', description = 'Hrishikesh — blog, devlog, projects, docs' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <style>
      /* Gurren Lagann-inspired palette */
      :root {
        --bg: #0b0d12;           /* deep space */
        --fg: #f3f5f7;           /* soft white */
        --muted:#9aa3ad;         /* steel */
        --card:#101623;          /* hull */
        --accent:#e11d2a;        /* spiral flame red */
        --accent-2:#ffcc00;      /* drill gold */
        --accent-3:#20c8f7;      /* sky cyan */
        --line:#1f2635;          /* panel line */
        --shadow: 0 10px 30px rgba(0,0,0,.35);
      }
      * { box-sizing: border-box }
      body {
        margin:0;
        font:16px ui-sans-serif, system-ui, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
        background:radial-gradient(1000px 600px at 20% -10%, rgba(225,29,42,.08), transparent 60%),
                   radial-gradient(1000px 600px at 80% -10%, rgba(32,200,247,.08), transparent 60%),
                   var(--bg);
        color:var(--fg);
      }
      a { color: var(--accent-3); text-decoration: none }
      a:hover { color: var(--accent) }
      header {
        position: sticky; top:0; z-index: 10;
        background: linear-gradient(180deg, rgba(0,0,0,.55), rgba(0,0,0,.25)), var(--bg);
        backdrop-filter: saturate(140%) blur(6px);
        border-bottom:1px solid var(--line);
      }
      .brand {
        font-weight: 800; letter-spacing: .5px; text-transform: uppercase;
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text; background-clip: text; color: transparent;
      }
      nav { display:flex; gap:16px; padding:14px 18px; max-width:1100px; margin:0 auto; align-items:center }
      .spacer { flex:1 }
      main { max-width:1100px; margin:0 auto; padding:28px 18px }
      footer { color:var(--muted); border-top:1px solid var(--line); padding:20px 18px; max-width:1100px; margin:40px auto 0 }

      /* Utilities */
      .btn { display:inline-flex; align-items:center; gap:10px; border:1px solid var(--line); color:var(--fg); padding:10px 14px; border-radius:10px; background:linear-gradient(180deg, rgba(225,29,42,.12), rgba(225,29,42,.05)); box-shadow: var(--shadow)}
      .btn:hover { border-color: var(--accent); box-shadow:0 8px 24px rgba(225,29,42,.25) }
      .btn.secondary { background:linear-gradient(180deg, rgba(32,200,247,.12), rgba(32,200,247,.05)); }
      .card { background: linear-gradient(180deg, rgba(255,255,255,.02), rgba(255,255,255,0)); border:1px solid var(--line); border-radius:14px; padding:18px; box-shadow: var(--shadow) }
      .muted { color: var(--muted) }

      /* Hero ribbon (subtle flame) */
      .hero {
        margin: 22px 0 10px; border:1px solid var(--line); border-radius:16px; overflow:hidden;
        background:
          radial-gradient(1200px 300px at -10% 0%, rgba(225,29,42,.25), transparent 40%),
          radial-gradient(1000px 260px at 110% 0%, rgba(255,204,0,.18), transparent 45%),
          linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,0));
      }
      .hero-inner { padding:28px 20px 24px; display:flex; gap:18px; align-items:center; justify-content:space-between }
      .hero h1 { margin:0; font-size: clamp(24px, 3.5vw, 40px); line-height:1.1 }
      .hero p { margin:8px 0 0; color:var(--muted) }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="brand">deadmeme.dev</a>
        <a href="/blog">blog</a>
        <a href="/devlog">devlog</a>
        <a href="/projects">projects</a>
        <a href="/docs">docs</a>
        <span class="spacer"></span>
        <a href="/resume">resume</a>
        <a href="https://github.com/DeadMeme5441" target="_blank" rel="noreferrer">github</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      © {new Date().getFullYear()} Hrishikesh V • deadmeme.dev
    </footer>
  </body>
  </html>
