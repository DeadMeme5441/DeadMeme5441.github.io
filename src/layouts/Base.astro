---
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import '../styles/globals.css';

const { title = 'deadmeme.dev', description = 'Hrishikesh — blog, devlog, projects, docs' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Theme initialization script (runs before page load) -->
    <script is:inline>
      // Prevent flash of unstyled content by setting theme immediately
      (function() {
        const theme = localStorage.getItem('theme') || 
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  
  <body class="min-h-screen bg-surface-50 text-surface-900 dark:bg-surface-950 dark:text-surface-50 font-sans antialiased transition-colors duration-300">
    
    <!-- Header -->
    <header class="sticky top-0 z-40 glass bg-surface-50/80 dark:bg-surface-950/80 border-b border-surface-200 dark:border-surface-800 transition-all duration-300">
      <nav class="container mx-auto px-4 sm:px-6 py-4">
        <div class="flex items-center gap-6">
          <!-- Brand -->
          <a 
            href="/" 
            class="brand-logo font-black text-xl sm:text-2xl tracking-wide uppercase bg-brand-gradient text-gradient hover:scale-105 transition-transform duration-300"
          >
            deadmeme.dev
          </a>
          
          <!-- Navigation Links -->
          <div class="hidden sm:flex items-center gap-6 text-sm font-medium">
            <a 
              href="/blog" 
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              blog
            </a>
            <a 
              href="/devlog" 
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              devlog
            </a>
            <a 
              href="/projects" 
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              projects
            </a>
            <a 
              href="/docs" 
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              docs
            </a>
          </div>
          
          <!-- Mobile menu button -->
          <button 
            id="mobile-menu-toggle"
            class="sm:hidden p-2 rounded-lg hover:bg-surface-200 dark:hover:bg-surface-800 transition-colors duration-200"
            aria-label="Toggle mobile menu"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          
          <!-- Spacer -->
          <div class="flex-1"></div>
          
          <!-- External Links -->
          <div class="hidden sm:flex items-center gap-4 text-sm">
            <a 
              href="/resume" 
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              resume
            </a>
            <a 
              href="https://github.com/DeadMeme5441" 
              target="_blank" 
              rel="noreferrer"
              class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
            >
              github
            </a>
          </div>
          
          <!-- Theme Switcher in Header -->
          <ThemeSwitcher />
        </div>
        
        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="sm:hidden hidden mt-4 pt-4 border-t border-surface-200 dark:border-surface-800">
          <div class="flex flex-col gap-3 text-sm font-medium">
            <a href="/blog" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">blog</a>
            <a href="/devlog" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">devlog</a>
            <a href="/projects" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">projects</a>
            <a href="/docs" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">docs</a>
            <a href="/resume" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">resume</a>
            <a href="https://github.com/DeadMeme5441" target="_blank" rel="noreferrer" class="nav-link text-surface-700 dark:text-surface-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">github</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="relative z-10 container mx-auto px-4 sm:px-6 py-8 lg:py-12 min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 border-t border-surface-200 dark:border-surface-800 mt-16">
      <div class="container mx-auto px-4 sm:px-6 py-8">
        <div class="text-center text-sm text-surface-600 dark:text-surface-400">
          © {new Date().getFullYear()} Hrishikesh V • deadmeme.dev
          <div class="mt-2 flex justify-center items-center gap-2">
            <!-- Theme indicator with CSS artifacts -->
            <span class="hidden sm:inline">Powered by</span>
            <span id="footer-theme-name" class="font-semibold bg-brand-gradient text-gradient"></span>
            <span class="hidden sm:inline">energy</span>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script>
      // Mobile menu functionality
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuToggle && mobileMenu) {
        mobileMenuToggle.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
      
      // Update footer theme name
      function updateFooterThemeName(theme) {
        const footerThemeName = document.getElementById('footer-theme-name');
        if (footerThemeName) {
          const themeName = theme === 'light' ? 'Spiral' : 'AT Field';
          footerThemeName.textContent = themeName;
        }
      }
      
      // Initialize footer theme name
      const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
      updateFooterThemeName(currentTheme);
      
      // Listen for theme changes
      window.addEventListener('themechange', (event) => {
        updateFooterThemeName(event.detail.theme);
      });
      
      // Add smooth scrolling behavior for anchor links
      document.addEventListener('click', (e) => {
        const target = e.target.closest('a[href^="#"]');
        if (target) {
          e.preventDefault();
          const id = target.getAttribute('href').substring(1);
          const element = document.getElementById(id);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth' });
          }
        }
      });
      
      // Add loading states for external links
      document.querySelectorAll('a[target="_blank"]').forEach(link => {
        link.addEventListener('click', () => {
          link.style.opacity = '0.7';
          setTimeout(() => {
            if (link.style) link.style.opacity = '1';
          }, 200);
        });
      });
    </script>
  </body>
</html>